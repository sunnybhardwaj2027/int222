const fs = require('fs');

const books = [
  { id: 1, title: "Rich Dad Poor Dad", price: 300 },
  { id: 2, title: "Atomic Habits", price: 450 },
  { id: 3, title: "Deep Work", price: 400 },
];

fs.writeFileSync('books.json', JSON.stringify(books, null, 2));
console.log('books.json created');

let data = JSON.parse(fs.readFileSync('books.json'));
data = data.map(book => book.id === 2 ? { ...book, price: 500 } : book);

fs.writeFileSync('books.json', JSON.stringify(data, null, 2));
console.log('Updated price of one book');
